# this is database mongodb
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/?retryWrites=true&w=majority
USERS_MONGODB_URI=

# Auth (required)
NEXTAUTH_SECRET=your-secret-min-32-chars
NEXTAUTH_URL=http://localhost:3000
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# CSRF (optional; falls back to NEXTAUTH_SECRET)
CSRF_SECRET=

# Admin (required for admin panel)
ADMIN_FIELD=
ADMIN_VALUE=
ADMIN_TOKEN_1=
ADMIN_TOKEN_2=

# Cron (required for cron endpoints; use a long random string)
CRON_SECRET=

# Cloudflare Turnstile (signup/login)
TURNSTILE_SECRET_KEY=
NEXT_PUBLIC_TURNSTILE_SITE_KEY=

# Email (Resend)
RESEND_API_KEY=

# Cloudflare R2 / S3 (thumbnails)
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET=
R2_PUBLIC_URL=

# Optional: Redis (rate limiting / cache)
REDIS_URL=

# Optional: MongoDB tuning
MONGO_MAX_POOL_SIZE=
MONGO_GLOBAL_MAX_CONNECTIONS=
